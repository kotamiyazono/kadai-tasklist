  <h1>ログイン</h1>

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :email, 'メールアドレス' %>
        <%= f.email_field :email %>

        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>

      <%= f.submit 'Log in' %>
    <% end %>

    <p>初めての方はこちら &gt; <%= link_to 'ユーザー登録', signup_path %></p>
